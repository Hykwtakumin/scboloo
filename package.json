{
  "name": "scboloo",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:pastak/scboloo.git",
  "author": "pastak <pasta0915@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "./node_modules/.bin/webpack --config webpack.config.js",
    "watch": "yarn build -- --watch",
    "test": "yarn test:lint && yarn test:ava",
    "test:ava": "./node_modules/.bin/ava",
    "test:lint": "./node_modules/.bin/standard",
    "test:lint:firefox": "./node_modules/.bin/web-ext lint -s dist/firefox -a packages -w",
    "pack": "yarn build && yarn pack:chrome && yarn pack:firefox",
    "pack:chrome": "./node_modules/.bin/crx pack -p tmp/key.pem -o packages/scboloo.crx --zip-output packages/scboloo.chrome.zip dist/chrome",
    "pack:chrome:keygen": "./node_modules/.bin/crx keygen ./tmp",
    "pack:firefox": "./node_modules/.bin/web-ext build -s dist/firefox -a packages"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-register": "^6.22.0",
    "copy-webpack-plugin": "^4.0.1",
    "crx": "^3.2.1",
    "on-build-webpack": "^0.1.0",
    "sinon": "^1.17.7",
    "sinon-chrome": "^2.1.2",
    "standard": "^8.6.0",
    "web-ext": "^1.7.0",
    "webpack": "beta",
    "wemf": "^0.3.3"
  },
  "dependencies": {
    "then-chrome": "^1.0.5"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill",
      "./test/helpers/chrome.js"
    ],
    "babel": "inherit"
  },
  "standard": {
    "globals": [
      "chrome"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "es2017"
    ]
  },
  "webextension": {
    "applications": {
      "gecko": {
        "id": "scboloo@pastak.net",
        "strict_min_version": "52.0"
      }
    }
  }
}
