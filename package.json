{
  "name": "scboloo",
  "version": "0.2.1",
  "main": "index.js",
  "repository": "git@github.com:pastak/scboloo.git",
  "author": "pastak <pasta0915@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist/{chrome,firefox,common,msedge}/* && rm -rf packages/* ",
    "build": "./node_modules/.bin/webpack --config webpack.config.js",
    "build:msedge": "./node_modules/.bin/webpack --config webpack.msedge.config.js",
    "watch": "yarn build -- --watch",
    "test": "yarn test:lint && yarn test:ava",
    "test:ava": "./node_modules/.bin/ava",
    "test:lint": "./node_modules/.bin/standard",
    "test:lint:package:firefox": "./node_modules/.bin/web-ext lint -s dist/firefox -w",
    "pack": "yarn run clean && yarn build && yarn pack:chrome && yarn pack:firefox && yarn pack:msedge",
    "pack:chrome": "yarn pack:chrome:keygen && ./node_modules/.bin/crx pack -p tmp/key.pem -o packages/scboloo.crx --zip-output packages/scboloo.chrome.zip dist/chrome",
    "pack:chrome:keygen": "if [ ! -f tmp/key.pem ] ; then ./node_modules/.bin/crx keygen ./tmp ; fi",
    "pack:firefox": "yarn test:lint:package:firefox && ./node_modules/.bin/web-ext build -s dist/firefox -a packages",
    "pack:msedge": "yarn run build:msedge && yarn run pack:msedge:prepare && ./node_modules/.bin/manifoldjs -l debug -p edgeextension package tmp/Scboloo/edgeextension/manifest && yarn pack:msedge:finalize",
    "pack:msedge:gen-manifest": "rm -rf tmp/Scboloo && ./node_modules/.bin/manifoldjs -l debug -p edgeextension -f edgeextension -m dist/msedge/manifest.json && mv Scboloo tmp",
    "pack:msedge:replace-manifest": "yarn pack:msedge:replace-manifest:01 && yarn pack:msedge:replace-manifest:02 && yarn pack:msedge:replace-manifest:03",
    "pack:msedge:replace-manifest:01": "sed -i -e \"s|INSERT-YOUR-PACKAGE-IDENTITY-NAME-HERE|$MS_PACKAGE_ID|\" tmp/Scboloo/edgeextension/manifest/appxmanifest.xml",
    "pack:msedge:replace-manifest:02": "sed -i -e \"s|INSERT-YOUR-PACKAGE-IDENTITY-PUBLISHER-HERE|$MS_PUBLISHER_IDENTITY|\" tmp/Scboloo/edgeextension/manifest/appxmanifest.xml",
    "pack:msedge:replace-manifest:03": "sed -i -e \"s|INSERT-YOUR-PACKAGE-PROPERTIES-PUBLISHERDISPLAYNAME-HERE|$MS_PUBLISHER_DNAME|\" tmp/Scboloo/edgeextension/manifest/appxmanifest.xml",
    "pack:msedge:prepare": "yarn pack:msedge:gen-manifest && yarn pack:msedge:replace-manifest",
    "pack:msedge:finalize": "mv tmp/Scboloo/edgeextension/package/edgeExtension.appx packages"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-register": "^6.24.1",
    "chrome-browser-object-polyfill": "^0.2.2",
    "copy-webpack-plugin": "^4.0.1",
    "crx": "^3.2.1",
    "json-update": "^3.0.0",
    "manifoldjs": "^0.7.6",
    "on-build-webpack": "^0.1.0",
    "sinon": "^2.1.0",
    "sinon-chrome": "^2.1.3",
    "standard": "^10.0.1",
    "web-ext": "^1.8.1",
    "webpack": "^2.3.3",
    "wemf": "^1.0.0"
  },
  "dependencies": {
    "then-chrome": "^1.0.6"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill",
      "./test/helpers/chrome.js"
    ],
    "babel": "inherit"
  },
  "standard": {
    "globals": [
      "chrome"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "es2017"
    ]
  },
  "webextension": {
    "applications": {
      "gecko": {
        "id": "scboloo@pastak.net",
        "strict_min_version": "52.0"
      }
    }
  }
}
